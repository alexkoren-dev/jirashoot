{
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": [
    "plugin:react/recommended",
    "plugin:prettier/recommended"
  ],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2020,
    "sourceType": "module",
    "parser": "babel-eslint"
  },
  "plugins": [
    "react"
  ],
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "rules": {
    "indent": [
      "error", 2,
      {
        "SwitchCase": 1,
        "VariableDeclarator": "first",
        "MemberExpression": 1,
        "FunctionDeclaration": {
          "body": 1,
          "parameters": "first"
        },
        "CallExpression": {"arguments": "first"},
        "ArrayExpression": 1,
        "ObjectExpression": 1,
        "ImportDeclaration": 1,
        "flatTernaryExpressions": true
      }
    ],
    "array-bracket-newline": [
      "error",
      "consistent"
    ],
    "brace-style": ["error", "1tbs"],
    "array-bracket-spacing": ["error", "never"],
    "quotes": ["error", "single"],
    "semi": ["error", "never"],
    "arrow-parens": 0,
    "jsx-quotes": ["error", "prefer-double"],
    "no-var": "error"
  }
}
  